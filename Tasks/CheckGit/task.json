{
    "id": "87106cf2-d9fb-4c2e-bb97-0335e5ee5334",
    "name": "checkgit",
    "friendlyName": "Check git",
    "description": "Checking that work is in progress with the current branch, checking the HEAD pointer and checking for the presence of a tag",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "Adeptik",
    "version": {
        "Major": 0,
        "Minor": 1,
        "Patch": 1
    },
    "instanceNameFormat": "Check branch '$(branch)'",
    "inputs": [
        {
            "name": "branch",
            "type": "string",
            "label": "Work branch",
            "defaultValue": "master",
            "required": true,
            "helpMarkDown": "Required branch"
        },
        {
            "name": "tagValidation",
            "type": "Boolean",
            "label": "Tag validation",
            "defaultValue": false,
            "required": true,
            "helpMarkDown": "Checking the last tag"
        },
        {
            "name": "headValidation",
            "type": "Boolean",
            "label": "HEAD validation",
            "defaultValue": false,
            "required": true,
            "helpMarkDown": "Checking that the local hash of the HEAD is equal to the remote HEAD"
        }
    ],
    "execution": {
        "Node": {
            "target": "index.js"
        }
    }
}